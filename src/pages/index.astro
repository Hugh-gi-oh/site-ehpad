import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import Tarifs from "../components/Tarifs.astro";
import ContactForm from "../components/ContactForm.astro";
import Footer from "../components/Footer.astro";
---
<BaseLayout>
  <Header />
  <Hero />
  <Section id="vie" title="Vie quotidienne" content="Nos résidents profitent d’un cadre de vie convivial, sécurisé et rythmé par des activités variées." image="/images/vie.jpg" />
