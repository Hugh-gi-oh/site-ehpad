---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import Tarifs from '../components/Tarifs.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
import FeatureBlock from '../components/FeatureBlock.astro';

import chambreImg from '../images/chambre.webp';
import soinsImg from '../images/soins.webp';
import repasImg from '../images/repas.webp';
import activitesImg from '../images/activites.webp';

// SEO
const title = 'Résidence Les Lauriers — Votre maison de retraite en Corrèze';
const description =
  'Un cadre de vie chaleureux au coeur de la Corrèze. Depuis 1977, la résidence Les Lauriers accueille 24 résidents dans une ambiance familiale.';
---
<BaseLayout title={title} description={description} canonical="https://example.com/">
  <Header />

  <main>
    <Hero
      title="Un cadre de vie chaleureux au coeur de la Corrèze"
      subtitle="Depuis 1977, la résidence Les Lauriers accueille 24 résidents dans une ambiance familiale au cœur de Sainte-Fortunade, à proximité de Tulle et de Brive."
      cta="Contactez-nous"
    />

    <Section id="vie" title="La vie aux Lauriers" subtitle="Votre quotidien chez nous">
      <div class="mt-4 grid gap-6 md:grid-cols-2">
        <div class="bg-white p-6 rounded shadow">
          <h4 class="font-semibold">Cadre agréable</h4>
          <p class="mt-2 text-gray-700">Village paisible, jardin sécurisé, commerces à pied.</p>
        </div>

        <div class="bg-white p-6 rounded shadow">
          <h4 class="font-semibold">Equipe soignante dévouée</h4>
          <p class="mt-2 text-gray-700">Infirmières, aides-soignantes, surveillance permanente.</p>
        </div>

        <div class="bg-white p-6 rounded shadow">
          <h4 class="font-semibold">Restauration maison</h4>
          <p class="mt-2 text-gray-700">Repas préparés sur place chaque jour.</p>
        </div>

        <div class="bg-white p-6 rounded shadow">
          <h4 class="font-semibold">Vie sociale riche</h4>
          <p class="mt-2 text-gray-700">Animations, sorties, ateliers, événements festifs.</p>
        </div>
      </div>
    </Section>

    <!-- SECTION : Des chambres où se sentir chez soi -->
    <FeatureBlock
      index={0}
      title="Des chambres où se sentir chez soi"
      image={chambreImg}
      alt="Chambre confortable et lumineuse"
      reverse={false}
    >
      <p class="text-gray-700">
        24 chambres individuelles rénovées, lumineuses et entièrement équipées :
      </p>
      <ul class="mt-2 list-disc list-inside text-gray-700 space-y-1">
        <li>Espace privatif personnalisable avec vos meubles et objets</li>
        <li>Cabinet de toilette avec douche à l'italienne</li>
        <li>Appel d'urgence + veille de nuit 24h/24</li>
        <li>Téléphone + wifi gratuit</li>
        <li>Entretien du linge inclus</li>
      </ul>
    </FeatureBlock>

    <!-- SECTION : Soins et accompagnement -->
    <FeatureBlock
      index={1}
      title="Soins et accompagnement"
      image={soinsImg}
      alt="Personnel soignant accompagnant un résident"
      reverse={true}
    >
      <p class="text-gray-700">
        Équipe soignante : 2 infirmières diplômées et des auxiliaires de vie qualifiées assurent
        tous les soins quotidiens (toilette, habillage, aide aux repas, suivi médical). Vous gardez
        le libre choix de votre médecin traitant.
      </p>
      <p class="text-gray-700">
        <strong>Inclus :</strong> tous les soins infirmiers et de nursing, produits d’incontinence,
        surveillance 24h/24, soutien psychologique en partenariat avec l’hôpital de Tulle.
      </p>
    </FeatureBlock>

    <!-- SECTION : Restauration maison -->
    <FeatureBlock
      index={2}
      title="Restauration maison"
      image={repasImg}
      alt="Repas préparé sur place"
      reverse={false}
    >
      <p class="text-gray-700">Tous les repas sont préparés sur place par notre équipe de cuisine.</p>
      <p class="text-gray-700">
        <strong>Horaires :</strong> Petit-déjeuner (7h-8h30), déjeuner (11h45), goûter (16h), dîner
        (18h30).
      </p>
      <p class="text-gray-700">
        <strong>Menus :</strong> repas équilibrés adaptés aux besoins nutritionnels, produits de
        saison, spécialités corréziennes.
      </p>
    </FeatureBlock>

    <!-- SECTION : Une vie sociale épanouissante -->
    <FeatureBlock
      index={3}
      title="Une vie sociale épanouissante"
      image={activitesImg}
      alt="Ateliers et animations à la résidence"
      reverse={true}
    >
      <p class="text-gray-700">
        Chaque après-midi : ateliers pâtisserie, jardinage, jeux de société, gym douce, stimulation
        mémoire…
      </p>
      <p class="text-gray-700">
        Vos proches sont toujours les bienvenus. Possibilité de déjeuner avec eux (prévenir 24h
        avant). Liberté de sortie en journée.
      </p>
    </FeatureBlock>

    <Tarifs />
    <ContactForm />
  </main>

  <Footer />
</BaseLayout>
