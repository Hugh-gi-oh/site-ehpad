---
import "@astrojs/tailwind";
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-md shadow-sm">
  <div class="container mx-auto flex items-center justify-between py-4 px-4 md:px-8">
    <!-- Logo -->
    <a
      href="/"
      class="flex items-center gap-4 md:gap-5 focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-600 rounded-lg"
      aria-label="Accueil - RÃ©sidence Les Lauriers"
    >
      <img
        src="/images/logo.webp"
        alt="Logo Les Lauriers"
        width="44"
        height="44"
        class="w-10 h-10 md:w-12 md:h-12"
      />
      <span class="text-base md:text-xl font-semibold text-emerald-700 tracking-wide">
        RÃ©sidence Les Lauriers
      </span>
    </a>

    <!-- Bouton menu mobile -->
    <button
      id="menu-button"
      type="button"
      class="md:hidden flex items-center gap-2 text-emerald-700 text-base font-medium focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-600 px-3 py-2 rounded-lg"
      aria-controls="main-nav"
      aria-expanded="false"
    >
      <svg
        id="menu-icon"
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <span class="sr-only">Menu</span>
    </button>

    <!-- Navigation -->
    <nav
      id="main-nav"
      aria-label="Navigation principale"
      class="absolute md:static top-full right-0 md:right-auto w-full md:w-auto bg-white md:bg-transparent shadow-md md:shadow-none opacity-0 invisible md:opacity-100 md:visible transition-all duration-300 ease-in-out"
    >
      <ul
  class="flex flex-col md:flex-row items-start md:items-center md:justify-end gap-4 md:gap-5 text-sm md:text-base font-medium text-gray-800 px-6 md:px-0 py-4 md:py-0"
>
  <li><a href="/" class="menu-link hover:text-emerald-700 focus-visible:ring-2 focus-visible:ring-emerald-600 rounded-lg px-2 py-1">Accueil</a></li>
  <li><a href="#vie" class="menu-link hover:text-emerald-700 focus-visible:ring-2 focus-visible:ring-emerald-600 rounded-lg px-2 py-1">La vie aux Lauriers</a></li>
  <li><a href="#tarifs" class="menu-link hover:text-emerald-700 focus-visible:ring-2 focus-visible:ring-emerald-600 rounded-lg px-2 py-1">Tarifs & admission</a></li>
  <li>
    <a
      href="#contact"
      class="menu-link inline-block rounded-md bg-primary px-4 py-2 text-white shadow-md transition transform hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
    >
      Contactez-nous
    </a>
  </li>
</ul>
    </nav>
  </div>
</header>

<style>
  #main-nav.open {
    opacity: 1;
    visibility: visible;
  }

  html {
    scroll-padding-top: 70px;
  }
</style>

<!-- âœ… Script client exÃ©cutÃ© aprÃ¨s le chargement -->
<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('menu-button');
    const nav = document.getElementById('main-nav');
    const icon = document.getElementById('menu-icon');
    const links = document.querySelectorAll('.menu-link');

    function toggleMenu(forceClose = false) {
      const isOpen = forceClose ? false : !nav.classList.contains('open');
      nav.classList.toggle('open', isOpen);
      button.setAttribute('aria-expanded', isOpen);
      icon.innerHTML = isOpen
        ? '<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />'
        : '<path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />';
    }

    button?.addEventListener('click', () => toggleMenu());
    
    // ðŸ‘‡ Quand on clique sur un lien du menu mobile, on ferme le menu
    links.forEach(link => {
      link.addEventListener('click', () => {
        if (window.innerWidth < 768) toggleMenu(true);
      });
    });
  });
</script>
