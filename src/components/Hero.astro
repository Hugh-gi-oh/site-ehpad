---
// Hero block using image in public/images/hero.jpg (add yours)
const { title, subtitle, cta } = Astro.props;
---
<section class="bg-white">
  <div class="container grid gap-8 py-12 lg:grid-cols-2 lg:items-center">
    <div>
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold leading-tight text-primary">{title}</h1>
      <p class="mt-4 text-lg text-gray-700">{subtitle}</p>
      <div class="mt-6 flex gap-4">
        <a href="#contact" class="inline-block rounded-md bg-primary px-5 py-3 text-white shadow hover:opacity-95">{cta}</a>
        <a href="#vie" class="inline-block rounded-md border border-primary px-5 py-3 text-primary">Découvrir</a>
      </div>
    </div>

    <div class="rounded-lg overflow-hidden shadow-md">
      <img src="/images/hero.jpg"
           alt="Vue extérieure Résidence Les Lauriers"
           loading="lazy"
           srcset="/images/hero.jpg 1x"
           sizes="(max-width: 768px) 100vw, 50vw"
           class="w-full h-auto object-cover" />
    </div>
  </div>
</section>
