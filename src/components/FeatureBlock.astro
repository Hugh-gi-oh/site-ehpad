---
import { Image } from "astro:assets";
const { title, image, alt, reverse = false, index = 0 } = Astro.props;
---

<!-- WRAPPER FULL-WIDTH -->
<div class={`${index % 2 === 0 ? "bg-gray-50" : "bg-accent/10"} w-full`}>
  <div class="container mx-auto px-4 py-16 lg:py-24">
    <div
      class={`grid items-center gap-12 md:grid-cols-2 ${
        reverse ? "md:[&>*:first-child]:order-last" : ""
      }`}
    >
      <div class="space-y-4">
        <h3 class="text-2xl font-semibold text-gray-900">{title}</h3>
        <slot />
      </div>

      <div class="w-full max-w-sm mx-auto md:mx-0">
        <Image
          src={image}
          alt={alt}
          widths={[320, 480, 640]}
          format="webp"
          sizes="(min-width: 768px) 33vw, 100vw"
          class="rounded-xl shadow-md object-cover w-full h-auto"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</div>
