<section id="contact" class="py-12 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl font-semibold text-green-800 mb-6 text-center">Contactez-nous</h2>
    <form class="max-w-lg mx-auto grid gap-4">
      <input type="text" placeholder="Nom" required class="border p-3 rounded" />
      <input type="email" placeholder="Email" required class="border p-3 rounded" />
      <textarea placeholder="Message" rows="4" required class="border p-3 rounded"></textarea>
      <button type="submit" class="bg-green-700 text-white px-6 py-3 rounded hover:bg-green-800 transition">
        Envoyer
      </button>
    </form>
  </div>
</section>
  