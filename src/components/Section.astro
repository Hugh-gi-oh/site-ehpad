---
const { id, title, subtitle } = Astro.props;
---
<section
  id={id}
  class="py-12 lg:py-20 bg-gray-50"
  aria-labelledby={id ? `${id}-title` : undefined}
>
  <div class="container mx-auto px-4">

    <!-- TITRE CENTRÉ -->
    <h2
      id={id ? `${id}-title` : undefined}
      class="text-2xl sm:text-3xl lg:text-4xl font-semibold text-primary leading-relaxed text-center"
    >
      {title}
    </h2>

    <!-- SOUS-TITRE CENTRÉ -->
    {subtitle && (
      <p class="mt-4 text-gray-700 text-base sm:text-lg leading-relaxed text-center">
        {subtitle}
      </p>
    )}

    <!-- ESPACE SUPPLÉMENTAIRE -->
    <div class="mt-12"></div>

    <!-- BARRE HORIZONTALE HAUTE -->
    <hr class="my-6 border-t border-gray-300 w-4/5 mx-auto" /> 

    <!-- SLOT FEATURES CENTRÉS -->
    <div class="flex justify-center mt-12 mb-12">
      <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl w-full" role="list">
        <slot />
      </ul>
    </div>

    <!-- BARRE HORIZONTALE BASSE -->
    <hr class="mt-8 border-t border-gray-300 w-4/5 mx-auto" /> 

  </div>
</section>
