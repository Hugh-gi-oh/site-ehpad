---
// Generic section for text + bullet features
const { id, title, subtitle, children } = Astro.props;
---
<section id={id} class="py-10 bg-gray-50">
  <div class="container">
    <h2 class="text-2xl font-semibold text-primary">{title}</h2>
    {subtitle ? <p class="mt-2 text-gray-700">{subtitle}</p> : null}
    <div class="mt-6">
      <slot />
    </div>
  </div>
</section>
