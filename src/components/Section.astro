---
// Generic section for text + bullet features
const { id, title, subtitle } = Astro.props;
---
<section
  id={id}
  class="py-12 lg:py-16 bg-gray-50"
  aria-labelledby={id ? `${id}-title` : undefined}
>
  <div class="container mx-auto px-4">
    
    <!-- Titre centré -->
    <h2
      id={id ? `${id}-title` : undefined}
      class="text-2xl sm:text-3xl lg:text-4xl font-semibold text-gray-900 leading-relaxed text-center"
    >
      {title}
    </h2>
    
    <!-- Texte aligné à gauche -->
    {subtitle && (
      <p class="mt-2 text-gray-700 text-base sm:text-lg leading-relaxed text-center">
        {subtitle}
      </p>
    )}

    <!-- Contenu slot aligné à gauche -->
    <div class="mt-6 flex flex-col gap-4 max-w-3xl">
      <slot />
    </div>
  </div>
</section>
